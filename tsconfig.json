{
  "compilerOptions": {
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "baseUrl": "..",
    "declaration": true,
    "lib": [ "es2015", "dom" ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}